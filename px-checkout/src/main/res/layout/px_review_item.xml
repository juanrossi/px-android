<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/px_review_item_background"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px_l_margin"
        android:paddingEnd="@dimen/px_m_margin"
        android:paddingStart="@dimen/px_m_margin"
        android:paddingTop="@dimen/px_l_margin">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="@dimen/px_m_height"
            android:layout_height="@dimen/px_m_height"
            android:layout_gravity="center_horizontal"
            tools:src="@drawable/px_review_item_default"/>

        <com.mercadopago.android.px.customviews.MPTextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_s_margin"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="@color/ui_meli_black"
            android:textSize="@dimen/px_l_text"
            tools:text="Titulo"/>

        <com.mercadopago.android.px.customviews.MPTextView
            android:id="@+id/item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_xs_margin"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="@color/ui_meli_dark_grey"
            android:textSize="@dimen/px_xs_text"
            tools:text="Subtitulo"/>

        <com.mercadopago.android.px.customviews.MPTextView
            android:id="@+id/item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_s_margin"
            android:textColor="@color/ui_meli_dark_grey"
            android:textSize="@dimen/px_s_text"
            tools:text="Cantidad: 1"/>

        <com.mercadopago.android.px.customviews.MPTextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/ui_meli_dark_grey"
            android:textSize="@dimen/px_s_text"
            tools:text="Precio unitario: $1234"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_xxxs_height"
        android:background="@color/px_med_light_gray"/>

</LinearLayout>