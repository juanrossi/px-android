<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/mpsdk_white"
             android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include
            layout="@layout/mpsdk_view_collapsing_appbar"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/floating_confirm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/mpsdk_white_background">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mpsdk_med_light_gray"/>

        <com.mercadolibre.android.ui.widgets.MeliButton
            android:id="@+id/floating_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            app:type="actionPrimary"
            app:state="normal"
            android:text="@string/mpsdk_confirm"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_margin="@dimen/mpsdk_s_margin"/>

    </FrameLayout>

</FrameLayout>