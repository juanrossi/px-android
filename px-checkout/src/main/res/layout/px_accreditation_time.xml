<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/px_light_gray"
              android:orientation="vertical"
              android:paddingEnd="@dimen/px_xl_margin"
              android:paddingLeft="@dimen/px_xl_margin"
              android:paddingRight="@dimen/px_xl_margin"
              android:paddingStart="@dimen/px_xl_margin">

    <com.mercadopago.android.px.customviews.MPTextView
        android:id="@+id/mpsdkAccreditationTimeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px_l_margin"
        android:gravity="center_horizontal|top"
        android:textSize="@dimen/px_xxs_text"
        android:textColor="@color/ui_meli_dark_grey"
        tools:text="Se acreditara en x horas"/>

    <LinearLayout
        android:id="@+id/mpsdkAccreditationTimeComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>


</LinearLayout>