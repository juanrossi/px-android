<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/px_light_gray"
        android:orientation="vertical"
        android:paddingEnd="@dimen/px_xl_margin"
        android:paddingLeft="@dimen/px_xl_margin"
        android:paddingRight="@dimen/px_xl_margin"
        android:paddingStart="@dimen/px_xl_margin">

        <com.mercadopago.android.px.internal.view.MPTextView
            android:id="@+id/mpsdkInstructionsInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_l_alternative_margin"
            android:textColor="@color/ui_meli_black"
            android:textSize="@dimen/px_l_text"
            tools:text="Title"/>

        <com.mercadopago.android.px.internal.view.MPTextView
            android:id="@+id/mpsdkInstructionsInfoContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_l_margin"
            android:textColor="@color/ui_meli_dark_grey"
            android:textSize="@dimen/px_s_text"
            tools:text="content"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/mpsdkInstructionsInfoDividerBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_l_alternative_margin"
        android:background="@color/px_light_gray"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_xxxs_height"
            android:layout_gravity="bottom"
            android:background="@color/px_med_light_gray"/>
    </FrameLayout>

</LinearLayout>