<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mpsdk_white"
    android:paddingLeft="@dimen/mpsdk_l_margin"
    android:paddingRight="@dimen/mpsdk_l_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/mpsdk_xl_height"
            android:layout_height="@dimen/mpsdk_xl_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/mpsdk_m_margin"
            android:src="@drawable/mpsdk_icon_error"/>

        <com.mercadopago.customviews.MPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/mpsdk_xs_margin"
            android:gravity="center"
            android:text="@string/mpsdk_error_title"
            android:textColor="@color/ui_meli_black"
            android:textSize="@dimen/mpsdk_xxxl_text"/>

        <com.mercadopago.customviews.MPTextView
            android:id="@+id/mpsdkErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/mpsdk_xs_margin"
            android:gravity="center"
            android:textColor="@color/ui_meli_grey"
            android:textSize="@dimen/mpsdk_m_text"
            tools:text="@string/mpsdk_standard_error_message"/>

        <com.mercadolibre.android.ui.widgets.MeliButton
            android:id="@+id/mpsdkErrorRetry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/mpsdk_refresh_message"
            app:state="normal"
            app:type="optionPrimary"/>

    </LinearLayout>

    <com.mercadolibre.android.ui.widgets.MeliButton
        android:id="@+id/mpsdkExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/mpsdk_s_margin"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:text="@string/mpsdk_exit_label"
        app:state="normal"
        app:type="optionPrimary"/>
</FrameLayout>