<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/mpsdk_m_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.mercadopago.customviews.MPTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/mpsdk_m_margin"
                android:layout_marginRight="@dimen/mpsdk_m_margin"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/ui_meli_black"
                android:textSize="@dimen/mpsdk_m_text"
                app:font_style="light"
                android:textAppearance="@style/MLFont.Light"
                tools:text="3 Google play"/>

            <com.mercadopago.customviews.MPTextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/mpsdk_m_margin"
                android:layout_marginRight="@dimen/mpsdk_m_margin"
                android:layout_marginTop="@dimen/mpsdk_xs_margin"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/ui_meli_grey"
                android:textSize="@dimen/mpsdk_xs_text"
                app:font_style="light"
                android:textAppearance="@style/MLFont.Light"
                tools:text="Tarjeta"/>

        </LinearLayout>

        <com.mercadopago.customviews.MPTextView
            android:id="@+id/item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/mpsdk_m_text"
            app:font_style="light"
            android:textAppearance="@style/MLFont.Light"
            tools:text="$ 870"/>
    </LinearLayout>

</LinearLayout>