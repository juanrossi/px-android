<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mpsdk_white"
    android:fitsSystemWindows="true"
    tools:context=".ReviewAndConfirmActivity"
    tools:ignore="MergeRootFrame">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_behavior="com.mercadopago.core.FixAppBarLayoutBehavior">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mpsdk_review_background"
            android:fitsSystemWindows="true"
            app:collapsedTitleGravity="start"
            app:collapsedTitleTextAppearance="@style/mpsdk_collapsing_review_toolbar_text_medium"
            app:contentScrim="@color/mpsdk_review_background"
            app:expandedTitleGravity="center_horizontal"
            app:expandedTitleMarginBottom="25dp"
            app:expandedTitleMarginTop="45dp"
            app:expandedTitleTextAppearance="@style/mpsdk_collapsing_review_toolbar_text_large"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mpsdk_toolbar_height"
                android:background="@color/mpsdk_review_background"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ReviewToolbarTheme"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/mpsdkReviewScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/mpsdkRegularLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mpsdk_white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/reviewables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mpsdk_summary_background_color"
                android:overScrollMode="never" />

            <include
                android:id="@+id/mpsdkCheckoutTermsAndConditions"
                layout="@layout/mpsdk_view_terms_and_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/mpsdkFirstSeparator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/mpsdk_separator" />

            <FrameLayout
                android:id="@+id/mpsdkCheckoutConfirmButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/mpsdk_button_bg_stroke"
                android:focusable="true"
                android:visibility="visible">

                <com.mercadopago.customviews.MPTextView
                    android:id="@+id/mpsdkConfirmText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/mpsdk_confirm_payment"
                    android:textColor="@color/mpsdk_white_background"
                    android:textSize="18dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/mpsdkReviewCancelButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="20dp">

                <com.mercadopago.customviews.MPTextView
                    android:id="@+id/mpsdkCancelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/mpsdk_cancel_payment"
                    android:textColor="@color/mpsdk_link"
                    android:textSize="16dp"
                    app:font_style="regular" />

            </FrameLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/mpsdkCheckoutFloatingConfirmView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        android:background="@color/mpsdk_white_background"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <FrameLayout
            android:id="@+id/mpsdkCheckoutFloatingConfirmButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/mpsdk_button_bg_stroke"
            android:focusable="true"
            android:visibility="visible">

            <com.mercadopago.customviews.MPTextView
                android:id="@+id/mpsdkFloatingConfirmText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/mpsdk_confirm_payment"
                android:textColor="@color/mpsdk_white_background"
                android:textSize="18dp" />

        </FrameLayout>
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>
