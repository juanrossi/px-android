<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/mpsdkAppBar"
        app:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MercadoPagoTheme.NoActionBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/mpsdkToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mpsdk_toolbar_height"
            android:background="@color/mpsdk_background"
            android:theme="@style/ToolbarTheme"
            app:popupTheme="@style/Theme.MercadoPagoTheme.NoActionBar">
            <com.mercadopago.customviews.MPTextView
                android:id="@+id/mpsdkTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/mpsdk_title_text"
                android:text="@string/mpsdk_title_activity_terms_and_conditions"
                android:textColor="@color/mpsdk_toolbar_text"
                android:layout_gravity="center"/>
        </android.support.v7.widget.Toolbar>
        <FrameLayout
            android:id="@+id/mpsdkShoppingCartFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context="com.mercadopago.TermsAndConditionsActivity">
        <include layout="@layout/mpsdk_view_progress_bar"/>
        <ScrollView
            android:id="@+id/mpsdkMPTermsAndConditions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <WebView
                android:id="@+id/mpsdkTermsAndConditionsWebView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>
        <ScrollView
            android:id="@+id/mpsdkBankDealsTermsAndConditions"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.mercadopago.customviews.MPTextView
                android:id="@+id/mpsdkTermsAndConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/mpsdk_form_input"/>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
