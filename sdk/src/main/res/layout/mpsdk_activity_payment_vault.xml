<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_weight="2"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fitsSystemWindows="true"
        tools:context=".PaymentVaultActivity">

    <include layout="@layout/mpsdk_view_progress_bar" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/mpsdkAppBar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_behavior="com.mercadopago.core.FixAppBarLayoutBehavior">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/mpsdkCollapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mpsdk_background"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/mpsdk_collapsing_toolbar_text_medium"
            app:contentScrim="@color/mpsdk_background"
            app:expandedTitleGravity="center_horizontal"
            app:expandedTitleTextAppearance="@style/mpsdk_collapsing_toolbar_text_large"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/mpsdkToolbar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/mpsdkToolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mpsdk_toolbar_height"
                android:theme="@style/ToolbarTheme"
                app:layout_collapseMode="pin">

                <com.mercadopago.customviews.MPTextView
                    android:id="@+id/mpsdkTimerTextView"
                    style="@style/mpsdk_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/mpsdk_title_toolbar"
                    android:textSize="17dp"
                    android:visibility="visible"
                    app:font_style="mono_regular"
                    tools:text="10.123123" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mpsdkGroupsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:background="@color/mpsdk_white"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    </android.support.design.widget.CoordinatorLayout>

    <com.mercadopago.views.AmountView
        android:id="@+id/amount_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/mpsdk_white"/>


</LinearLayout>





