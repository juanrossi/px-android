<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:visibility="gone"
    android:id="@+id/mpsdkLowResToolbar"
    android:background="@color/mpsdk_background"
    android:theme="@style/ToolbarTheme"
    app:popupTheme="@style/Theme.MercadoPagoTheme.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mpsdk_toolbar_height"
    android:minHeight="@dimen/mpsdk_toolbar_height">

    <com.mercadopago.customviews.MPTextView
        android:id="@+id/mpsdkTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        style="@style/mpsdk_toolbar_text_medium"
        tools:text="Tarjeta de crÃ©dito"/>

    <com.mercadopago.customviews.MPTextView
        android:id="@+id/mpsdkBankDealsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        style="@style/mpsdk_toolbar_text_xx_small"
        android:visibility="gone"
        tools:text="Ver Promociones"/>

    <com.mercadopago.customviews.MPTextView
        android:id="@+id/mpsdkTimerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="17dp"
        style="@style/mpsdk_toolbar_text_small"
        android:visibility="gone"
        android:background="@drawable/mpsdk_title_toolbar"
        app:font_style="mono_regular"
        app:allowCustomFont="false"/>

</android.support.v7.widget.Toolbar>