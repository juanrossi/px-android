<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mpsdk_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/mpsdk_l_margin"
        android:paddingRight="@dimen/mpsdk_l_margin">

        <ImageView
            android:layout_width="@dimen/mpsdk_xl_height"
            android:layout_height="@dimen/mpsdk_xl_height"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/mpsdk_icon_error" />

        <com.mercadopago.customviews.MPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/mpsdk_m_margin"
            android:gravity="center"
            android:text="@string/mpsdk_error_title"
            android:textColor="@color/mpsdk_black"
            android:textSize="@dimen/mpsdk_xxxl_text" />

        <com.mercadopago.customviews.MPTextView
            android:id="@+id/mpsdkErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/mpsdk_xs_margin"
            android:gravity="center"
            android:textColor="@color/mpsdk_warm_grey"
            android:textSize="@dimen/mpsdk_m_text"
            tools:text="@string/mpsdk_standard_error_message" />

        <com.mercadopago.customviews.MPTextView
            android:id="@+id/mpsdkErrorRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/mpsdk_xs_margin"
            android:gravity="center"
            android:padding="@dimen/mpsdk_s_margin"
            android:text="@string/mpsdk_refresh_message"
            android:textColor="@color/mpsdk_link"
            android:textSize="@dimen/mpsdk_m_text" />

    </LinearLayout>

    <com.mercadopago.customviews.MPTextView
        android:id="@+id/mpsdkExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center_horizontal"
        android:padding="@dimen/mpsdk_m_margin"
        android:text="@string/mpsdk_exit_label"
        android:textColor="@color/mpsdk_link"
        android:textSize="@dimen/mpsdk_m_text" />
</FrameLayout>